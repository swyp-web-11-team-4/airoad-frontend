{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",

  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      }
    }
  },

  "javascript": {
    "globals": ["browser"]
  },

  "files": {
    "includes": ["src/**/*.ts", "src/**/*.tsx", "!**/dist", "!**/node_modules"]
  }
}
